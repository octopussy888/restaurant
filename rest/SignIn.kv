<SignInGrid>
    mail:mail
    password:password

    BoxLayout:
        cols:1
        size: root.width, root.height
        size_hint: 0.4, 0.3
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        orientation: 'vertical'

        Label:
            text: 'Welcome!\nPlease fill the form to sign in :)'

        BoxLayout:
            size_hint: 1, 2
            color:"#64BCA7"
            orientation: 'vertical'
            padding: (0, 0)

            Spinner:
                text: '<select>'
                values: ['Admin', 'User']
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: None, None
                height: '20dp'
                weight: '20dp'
                background_normal:''
                background_color: '#64BCA7'


            BoxLayout:
                padding: (10, 10)
                size_hint: 1, None
                height: '50dp'
                Label:
                    text: 'E-mail (login)'
                TextInput:
                    id: mail
                    multiline:False


            BoxLayout:
                padding: (10, 10)
                size_hint: 1, None
                height: '50dp'
                Label:
                    text: 'Password'
                TextInput:
                    id:password
                    multiline:False

        Button:
            text: 'Submit'
            pos_hint: {'x': 0.25, 'top': 0.1}
            padding: (10, 10)
            size_hint: 0.5, 0.5
            font_size: 32
            background_normal:''
            background_color: '#64BCA7'
            on_press: root.press()

