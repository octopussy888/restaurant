<SignUpGrid>
    first_name:first_name
    last_name:last_name
    phone:phone
    address:address
    mail:mail
    password:password

    BoxLayout:
        size: (0, 0)
        size_hint: (None, None)
        padding: (50, 50)
        cols:1
        size: (500, 700)
        size_hint: 0.4, 0.3
        pos_hint: {'center_x': 1, 'center_y': 1}
        orientation: 'vertical'
        background_color: (0.6, 0.776, 0.81, 1)
        canvas:
            Color:
                rgba: self.background_color
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            padding: (0, 0)
            height: '150dp'
            pos_hint: {'center_x': 0.5, 'center_y': 0}
            orientation: 'vertical'
            BoxLayout:
                Image:
                    size_hint: (1.5, 1.5)
                    source: 'undraw_cat_tbjm-removebg-preview.png'
            BoxLayout:
                Label:
    #                text_size: 12
                    padding: (10, 10)
                    text: 'Hey! Nice to meet you :)\nPlease, sign up'

        BoxLayout:
            padding: (0, 0)
            size_hint: 1, 2
            color:"#64BCA7"
            orientation: 'vertical'

            Label:
                text: 'First Name'
            BoxLayout:
                padding: (10, 10)
                size_hint: 1, None
                height: '50dp'
                TextInput:
                    id: first_name
                    multiline:False

            Label:
                text: 'Last Name'
            BoxLayout:
                padding: (10, 10)
                size_hint: 1, None
                height: '50dp'
                TextInput:
                    id: last_name
                    multiline:False

            Label:
                text: 'Phone number'
            BoxLayout:
                padding: (10, 10)
                size_hint: 1, None
                height: '50dp'
                TextInput:
                    id:phone
                    multiline:False

            Label:
                text: 'Address'
            BoxLayout:
                padding: (10, 10)
                size_hint: 1, None
                height: '50dp'
                TextInput:
                    id: address
                    multiline:False

            Label:
                text: 'E-mail (login)'
            BoxLayout:
                padding: (10, 10)
                size_hint: 1, None
                height: '50dp'
                TextInput:
                    id: mail
                    multiline:False

            Label:
                text: 'Password'
            BoxLayout:
                padding: (10, 10)
                size_hint: 1, None
                height: '50dp'
                TextInput:
                    id:password
                    multiline:False

        BoxLayout:
            padding: (0, 0)
            Label:
                padding: (10, 10)
                text: "Already signed up?"
            Button:
                text: 'Sign in'
                color: 'blue'
                size_hint: None, None
                height: '5dp'
                weight: '5dp'
                background_normal: ''
                background_color: (0.6, 0.776, 0.81, 1)
                on_press: root.sign_in()

        BoxLayout:
            Button:
                text: 'Submit'
                padding: (0, 0)
                size_hint: None, 0.5
                weight: '100dp'
                font_size: 32
                background_normal:''
                background_color: '#64BCA7'
                on_press: root.press()

