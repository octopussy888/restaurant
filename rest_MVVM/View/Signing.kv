WindowManager:
    HelloWindow:
    SignUpClientWindow:
    SignUpAdminWindow:
    SignInClientWindow:
    SignInAdminWindow:

<HelloWindow>:
    name: 'Hello'
    role:role
    BoxLayout:
        padding: (200, 200)
        cols:1
        size: root.width, root.height
        size_hint: 1, 1
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        orientation: 'vertical'
        background_color: (0.6, 0.776, 0.81, 1)
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            padding: (0, 10)
            height: '150dp'
            pos_hint: {'center_x': 0.5, 'center_y': 0}
            orientation: 'vertical'
            BoxLayout:
                Image:
                    size_hint: None, None
                    height: 100
                    weight: 100
                    padding: (0, 10)
                    source: 'C:/Users/Admin/PycharmProjects1/Cross_platform/rest_MVVM/View/pics/cat.png'

        AnchorLayout:
            Label:
    #                text_size: 12
                padding: (0, 15)
                text: 'Hey! Nice to meet you :)\nPlease, choose your role!'

        AnchorLayout:
            padding: (0, 0)
            size_hint: 1, 2
            color:"#64BCA7"
            orientation: 'vertical'

            AnchorLayout:
                Spinner:
                    id: role
                    padding: (0, 10)
                    text: '<select>'
                    font_size: 17
                    values: ['Admin', 'User']
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    size_hint: None, None
                    height: '50dp'
                    weight: '50dp'
                    background_normal: 'C:/Users/Admin/PycharmProjects1/Cross_platform/rest_MVVM/View/pics/background.png'
                    background_down: 'C:/Users/Admin/PycharmProjects1/Cross_platform/rest_MVVM/View/pics/down.png'

        AnchorLayout:
            padding: (0, 0)
            size_hint: 1, 0.5
            color:"#64BCA7"
            orientation: 'vertical'

            Button:
                id: but_sub
                text: 'Submit role'
#                color:
                size_hint: None, None
                height: '50dp'
                weight: '75dp'
                font_size: 15
                background_normal: 'C:/Users/Admin/PycharmProjects1/Cross_platform/rest_MVVM/View/pics/background.png'
                background_down: 'C:/Users/Admin/PycharmProjects1/Cross_platform/rest_MVVM/View/pics/down.png'
                disabled: False
                on_press: root.submit_role()


        BoxLayout:
            padding: (0, 0)
            size_hint: 1, 2
            pos_hint: {'center_x': 0.05}
            color:"#64BCA7"
            orientation: 'horizontal'

            Button:
                id: but_s_up
                text: 'Sign up'
#                color:
                size_hint: None, None
                height: '50dp'
                weight: '100dp'
                font_size: 20
                background_normal: ''
                background_color: (0.6, 0.776, 0.81, 1)
                background_down: ''
                underline: True
#                color: '#5DBDB6'
                color: '#4AA9A2'
                background_disabled_normal: ''
                disabled: True
                on_release:
#                    app.root.current = 'SignUp'
                    on_press: root.s_up()
                    root.manager.transition.direction = 'right'

            Button:
                id: but_s_in
                text: 'Sign in'
                size_hint: None, None
                height: '50dp'
                weight: '100dp'
                font_size: 20
                background_normal: ''
                background_color: (0.6, 0.776, 0.81, 1)
                background_down: ''
                underline: True
#                color: '#5DBDB6'
                color: '#4AA9A2'
                background_disabled_normal: ''
                disabled: True
                on_release:
                    on_press: root.s_in()
#                    app.root.current = 'SignIn'
                    root.manager.transition.direction = 'left'

<SignUpClientWindow>:
    name: 'SignUpClient'
    c_first_name:c_first_name
    c_last_name:c_last_name
    c_phone:c_phone
    c_address:c_address
    c_mail:c_mail
    c_password:c_password

    BoxLayout:
        padding: (50, 50)
        spacing: 50
        cols:1
        orientation: 'vertical'
        background_color: (0.6, 0.776, 0.81, 1)
        canvas:
            Color:
                rgba: self.background_color
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            padding: 0, 25
            spacing: 0
            pos_hint: {'center_x': 0.5, 'center_y': 0}
            orientation: 'vertical'
            AnchorLayout:
                Image:
                    size_hint: (1.2,1.2)
                    source: 'C:/Users/Admin/PycharmProjects1/Cross_platform/rest_MVVM/View/pics/undraw_handcrafts_profile_info-removebg-preview.png'
            Label:
                text: 'Hey! Happy you here :)\nPlease, sign up'

        AnchorLayout:
            BoxLayout:
                padding: (0, 25)
                spacing: 20
                size_hint: 1, 2
                color:"#64BCA7"
                orientation: 'vertical'

                BoxLayout:
                    size_hint: 1, None
                    height: '30dp'
                    Label:
                        text: 'First Name'

                    TextInput:
                        id: c_first_name
                        multiline:False

                BoxLayout:
                    size_hint: 1, None
                    height: '30dp'
                    Label:
                        text: 'Last Name'

                    TextInput:
                        id: c_last_name
                        multiline:False

                BoxLayout:
                    size_hint: 1, None
                    height: '30dp'
                    Label:
                        text: 'Phone number'

                    TextInput:
                        id: c_phone
                        multiline:False

                BoxLayout:
                    size_hint: 1, None
                    height: '30dp'
                    Label:
                        text: 'Address'

                    TextInput:
                        id: c_address
                        multiline:False

                BoxLayout:
                    size_hint: 1, None
                    height: '30dp'
                    Label:
                        text: 'E-mail'

                    TextInput:
                        id: c_mail
                        multiline:False

                BoxLayout:
                    size_hint: 1, None
                    height: '30dp'
                    Label:
                        text: 'Password'

                    TextInput:
                        id: c_password
                        multiline:False

        BoxLayout:
            padding: (0, 0)
            orientation: 'vertical'
            BoxLayout:
                Label:
                    text: "Already signed up?"
                AnchorLayout:
                    Button:
                        text: 'Sign in'
                        color: 'blue'
                        size_hint: None, None
                        height: '5dp'
                        weight: '5dp'
                        background_normal: ''
                        background_color: (0.6, 0.776, 0.81, 1)
                        background_down: ''
                        on_release:
                            app.root.current='SignInClient'
                            root.manager.transition.direction = 'left'

#        BoxLayout:
            Button:
                text: 'Sign up'
                padding: (0, 0)
                size_hint: 0.5, 0.5
                pos_hint: {'center_x': 0.5}
                font_size: 32
                background_normal: 'C:/Users/Admin/PycharmProjects1/Cross_platform/rest_MVVM/View/pics/background.png'
                background_down: 'C:/Users/Admin/PycharmProjects1/Cross_platform/rest_MVVM/View/pics/down.png'
                on_press: root.sign_up_client()
                on_release: app.root.current='MainScreen'

